<%= form_for @pinterest do |f| %>
    <%= f.label :description %> <br>
    <%= f.text_area :description, cols: "50", rows: "10", placeholder: "Descrição do Pinterest" %> <br><br>
    <%= f.label :status %> <br>
    <%= f.select(:status, Pinterest.statuses.keys.map {|status| [status.titleize, status]}, {}, class: "inline form-control") %> <br>
    <%= f.submit "Enviar" %>
<% end %>